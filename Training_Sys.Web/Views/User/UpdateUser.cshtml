@model UpdateUserVM

@{
    ViewData["Title"] = "Update User";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Update User</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddUser" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter user's full name" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="invalid-feedback">
                                Please provide the user's name.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Enter user's email" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-bold">User Role</label>
                            <select asp-for="Role" class="form-select form-select-lg" required>
                                <option value="" selected disabled>Select a role</option>
                                @foreach (var role in (List<string>)ViewData["Roles"])
                                {
                                    <option value="@role">@role</option>
                                }

                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                            <div class="invalid-feedback">
                                Please select a user role.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">userVM
                                <i class="fas fa-user-plus me-2"></i>Update User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Enhanced validation feedback
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px 15px;
        }

        .btn {
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
        }

        .invalid-feedback {
            font-size: 0.85rem;
        }
    </style>
}