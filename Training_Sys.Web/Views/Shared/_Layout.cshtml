<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Training System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Training_Sys.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .navbar-dark {
            background-color: #1a237e !important; 
        }

        footer.bg-dark {
            background-color: #1a237e !important; 
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg bg-dark shadow-sm">

            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imgs/logo2.png" alt="Logo" width="40" height="40" class="me-2 rounded-circle border border-light">
                    <span class="fw-bold">Training System</span>
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Course" asp-action="Index"><i class="bi bi-book"></i> Courses</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="User" asp-action="Index"><i class="bi bi-people"></i> Users</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Session" asp-action="Index"><i class="bi bi-calendar-event"></i> Sessions</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Grade" asp-action="Index"><i class="bi bi-bar-chart"></i> Grades</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class=" text-white mt-auto py-3 shadow-sm">
        <div class="container text-center">
            <small>&copy; 2025 - Training System | <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">Privacy</a></small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>