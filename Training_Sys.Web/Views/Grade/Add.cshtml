@model AddGradeVM

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">➕ Add Grade</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="TraineeId" class="form-label fw-bold">Trainee</label>
                    <select asp-for="TraineeId" asp-items="ViewBag.Trainees" class="form-select"></select>
                    <span asp-validation-for="TraineeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SessionId" class="form-label fw-bold">Session</label>
                    <select asp-for="SessionId" asp-items="ViewBag.Sessions" class="form-select"></select>
                    <span asp-validation-for="SessionId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Value" class="form-label fw-bold">Grade Value</label>
                    <input asp-for="Value" class="form-control" placeholder="Enter grade (e.g. 95)" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
